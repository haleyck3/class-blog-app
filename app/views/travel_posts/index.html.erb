<p id="notice"><%= notice %></p>

<h1>Listing Travel Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Type</th>
      <th>Travel entry</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @travel_posts.each do |travel_post| %>
      <tr>
        <td><%= travel_post.title %></td>
        <td><%= travel_post.author %></td>
        <td><%= travel_post.type %></td>
        <td><%= travel_post.travel_entry %></td>
        <td><%= link_to 'Show', travel_post %></td>
        <td><%= link_to 'Edit', edit_travel_post_path(travel_post) %></td>
        <td><%= link_to 'Destroy', travel_post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

